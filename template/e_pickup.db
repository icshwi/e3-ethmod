#========================================================
#===== Voltage monitor
record(calc, "$(P)$(R_LTC2991)CurrMonitor") {
    field(DESC, "Current Consumption")
    field(EGU, "mA")
    field(CALC, "(A-B)*2000")
    field(INPA, "$(P)$(R_LTC2991)ValueV1_RBV CP")
    field(INPB, "$(P)$(R_LTC2991)ValueV2_RBV CP")
}

record("*", "$(P)$(R_LTC2991)ValueV4_RBV") {
    field(DESC, "Comparator in")
    alias("$(P)$(R_LTC2991)Comp_in")
    field(EGU, "V")
}

record("*", "$(P)$(R_LTC2991)ValueV5_RBV") {
    field(DESC, "Analog voltage 5V")
    field(EGU, "V")
    alias("$(P)$(R_LTC2991)AnaVol5V")
}

record("*", "$(P)$(R_LTC2991)ValueV6_RBV") {
    field(DESC, "Analog voltage current pickup")
    field(EGU, "V")
    alias("$(P)$(R_LTC2991)AnaVolCurr")
}

record("*", "$(P)$(R_LTC2991)Trigger")
{
    field(SCAN, ".5 second")
}

record("*", "$(P)$(R_LTC2991)Read")
{
    field(SCAN, ".5 second")
}

#========================================================
#===== Temperature monitor
record("*", "$(P)$(R_TMP100)Read")
{
    field(SCAN, ".5 second")
}
record("*", "$(P)$(R_TMP100)Value_RBV")
{
    field(EGU, "C")
}

